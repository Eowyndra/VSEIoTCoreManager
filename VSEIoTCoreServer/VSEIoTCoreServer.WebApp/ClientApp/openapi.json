  "components": {
    "schemas": {
      "AddDeviceViewModel": {
        "required": [
          "ioTCorePort",
          "vseIpAddress",
          "vsePort"
        ],
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "nullable": true
          },
          "vseIpAddress": {
            "pattern": "^(?:[0-9]{1,3}\\.){3}[0-9]{1,3}$",
            "type": "string"
          },
          "vsePort": {
            "maximum": 65535,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "ioTCorePort": {
            "maximum": 65535,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "DeviceConfigurationViewModel": {
        "required": [
          "id",
          "ioTCorePort",
          "vseIpAddress",
          "vsePort"
        ],
        "type": "object",
        "properties": {
          "ioTStatus": {
            "$ref": "#/components/schemas/IoTStatus"
          },
          "deviceStatus": {
            "$ref": "#/components/schemas/DeviceStatus"
          },
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "name": {
            "type": "string",
            "nullable": true
          },
          "vseType": {
            "type": "string",
            "nullable": true
          },
          "vseIpAddress": {
            "type": "string"
          },
          "vsePort": {
            "maximum": 65535,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "ioTCorePort": {
            "maximum": 65535,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "DeviceStatus": {
        "enum": [
          "Pending",
          "Disconnected",
          "Connecting",
          "Connected",
          "Timeout"
        ],
        "type": "string"
      },
      "GlobalIoTCoreStatus": {
        "enum": [
          "Stopped",
          "PartlyRunning",
          "Started",
          "Starting",
          "Stopping"
        ],
        "type": "string"
      },
      "GlobalIoTCoreStatusViewModel": {
        "type": "object",
        "properties": {
          "status": {
            "$ref": "#/components/schemas/GlobalIoTCoreStatus"
          }
        },
        "additionalProperties": false
      },
      "IoTStatus": {
        "enum": [
          "Stopped",
          "Started"
        ],
        "type": "string"
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": {}
      },
      "StatusViewModel": {
        "type": "object",
        "properties": {
