{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:dd.MM.yyyy HH:mm:ss.FFF zzz} [{Level}] [{ApplicationName}] [{IP}]:[{Port}] [{CorrelationId}]{NewLine}\t{Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "pathFormat": "logs/VSEIoTCoreServer.{Date}.txt",
          "outputTemplate": "{Timestamp:dd.MM.yyyy HH:mm:ss.FFF zzz} [{Level}] [{ApplicationName}] [{IP}]:[{Port}] [{CorrelationId}] {Message:lj}{NewLine}{Exception}",
          "retainedFileCountLimit": 10
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  }
}